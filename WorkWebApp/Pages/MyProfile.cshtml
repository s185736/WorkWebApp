@page
@model MyProfileModel
@{
    ViewData["Title"] = "My Profile";
}
<h1>@ViewData["Title"]</h1>

    <form method="get"  enctype="multipart/form-data" asp-controller="Admin">
       
     
        
     @* <div asp-validation-summary="All"></div>  *@
        
        <div class="form-row">
            <input asp-for="viewUser!.record_id" hidden />
            <div class="form-group col-md-6">
                <label asp-for="viewUser!.firstname">First Name</label>
                <input asp-for="viewUser!.firstname" class="form-control" readonly>
                <span asp-validation-for="viewUser!.firstname" class="aler-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="viewUser!.lastname">Last Name</label>
                <input asp-for="viewUser!.lastname" class="form-control" readonly>
                <span asp-validation-for="viewUser!.lastname" class="aler-danger"></span>
            </div>
 
            <div class="form-group col-md-6">
                <label asp-for="viewUser!.mail">Email</label>
                <input asp-for="viewUser!.mail" class="form-control" readonly>
                <span asp-validation-for="viewUser!.mail" class="aler-danger"></span>
            </div>
 
            <div class="form-group col-md-6">
                <label asp-for="viewUser!.phonenumber">Phone Number</label>
                <input asp-for="viewUser!.phonenumber" class="form-control" readonly>
                <span asp-validation-for="viewUser!.phonenumber" class="aler-danger"></span>
            </div>
 
            <div class="form-group col-md-6">
                <label asp-for="viewUser!.birthday">Birthday</label>
                <input asp-for="viewUser!.birthday" class="form-control" readonly>
                <span asp-validation-for="viewUser!.birthday" class="aler-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="viewUser!.role">Role</label>
                <input asp-for="viewUser!.role" class="form-control" readonly>
                <span asp-validation-for="viewUser!.role" class="aler-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="viewUser!.department">Department</label>
                <input asp-for="viewUser!.department" class="form-control" readonly>
                <span asp-validation-for="viewUser!.department" class="aler-danger"></span>
            </div>

        </div>
        </form>