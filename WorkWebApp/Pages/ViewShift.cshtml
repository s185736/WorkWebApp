@page
@using WorkWebApp.data
@model WorkWebApp.Pages.ViewShift

@{
    ViewData["Title"] = "View Shifts";
}
<h1>@ViewData["Title"]</h1>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
        <title>Index</title>
</head>
<body>

<form method="post">
        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td style="width: 60px">
                    Id<br />
                    <input type="number" asp-for="Shift.record_id" style="width:50px" />
                </td>
                <td style="width: 150px">
                    Start time<br />
                    <input type="time" asp-for="Shift.start_time" style="width: 140px" />
                </td>
                <td style="width: 150px">
                    End time:<br />
                    <input type="time" asp-for="Shift.end_time" style="width: 140px" />
                </td>
                <td style="width: 200px">
                    <br />
                    <input type="submit" value="Update" asp-page-handler="Submit" />
                </td>
            </tr>
        </table>
    </form>
    @if (ViewData["Message"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewData["Message"]");
            };
        </script>
    }

</body>
</html>