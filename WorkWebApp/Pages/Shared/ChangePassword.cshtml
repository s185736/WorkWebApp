@page "/change-password"
@model WorkWebApp.Pages.Shared.ChangePassword

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/change-password.css">
</head>
<body>
<div>
    <div id="changepasswprd-container">
        <h1 id="cph1">Change an employee's password here</h1>
        <form method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" asp-for="Email" required>
            </div>
            <div class="form-group">
                <label for="password">New Password</label>
                <input type="password" asp-for="NewPassword" required>
            </div>
            <div class="form-group">
                <button type="submit">Change Password</button>
            </div>
            <div class="form-group">
                <button onclick="goBack()">Cancel</button>
            </div>
        </form>
    </div>
</div>
<script>
        function goBack() {
            window.history.back();
        }
    </script>
</body>
</html>
